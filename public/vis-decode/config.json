{
    "$schema": "https://raw.githubusercontent.com/reVISit-studies/study/main/src/parser/StudyConfigSchema.json",
    "studyMetadata": {
        "title": "Visual Decoding Operators",
        "version": "pilot",
        "authors": [
            "Sheng Long"
        ],
        "date": "2024-12-18",
        "description": "A study designed to elicit responses from participants",
        "organizations": [
            "Northwestern University"
        ]
    },
    "uiConfig": {
        "contactEmail": "contact@revisit.dev",
        "helpTextPath": "vis-decode/assets/help.md",
        "logoPath": "revisitAssets/revisitLogoSquare.svg",
        "withProgressBar": true,
        "autoDownloadStudy": false,
        "sidebar": true
    },
    "importedLibraries": [],
    "baseComponents": {
      "PDF-Median": {
        "type": "react-component", 
        "path": "vis-decode/assets/Test.tsx", 
        "instruction": "Click on the curve such that a vertical line throught the point splits the area under the curve into two equal parts.",
        "nextButtonLocation": "sidebar",
        "parameters": {
          "data": {"xi": 0, "omega": 1, "nu": 1, "alpha": 0}, 
          "showPDF": true
        }, 
        "response": [
          {
            "id": "location", 
            "prompt": "The location of your click", 
            "required": true, 
            "location": "sidebar",
            "type": "iframe"
          }
        ]
      }, 
      "PDF-Mode": {
        "type": "react-component", 
        "path": "vis-decode/assets/Test.tsx", 
        "instruction": "Click on the highest point of the curve.",
        "nextButtonLocation": "sidebar",
        "parameters": {
          "data": {"xi": 0, "omega": 1, "nu": 1, "alpha": 0}, 
          "showPDF": true
        }, 
        "response": [
          {
            "id": "location", 
            "prompt": "The location of your click", 
            "required": true, 
            "location": "sidebar",
            "type": "iframe"
          }
        ]
      }, 
      "CDF-Median": {
        "type": "react-component", 
        "path": "vis-decode/assets/Test.tsx", 
        "instruction": "Click on the curve that interects with the horizontal line where y = 0.5",
        "nextButtonLocation": "sidebar",
        "parameters": {
          "data": {"xi": 0, "omega": 1, "nu": 1, "alpha": 0}, 
          "showPDF": false
        },
        "response": [
          {
            "id": "location", 
            "prompt": "The location of your click", 
            "required": true, 
            "location": "sidebar",
            "type": "iframe"
          }
        ]
      },
      "CDF-Mode": {
        "type": "react-component", 
        "path": "vis-decode/assets/Test.tsx", 
        "instruction": "Click on the curve that has the steepest tangent slope.",
        "nextButtonLocation": "sidebar",
        "parameters": {
          "data": {"xi": 0, "omega": 1, "nu": 1, "alpha": 0}, 
          "showPDF": false
        }, 
        "response": [
          {
            "id": "location", 
            "prompt": "The location of your click", 
            "required": true, 
            "location": "sidebar",
            "type": "iframe" 
          }
        ]
      }
    },
    "components": {
        "introduction": {
            "type": "markdown",
            "path": "vis-decode/assets/introduction.md",
            "response": [
                {
                "id": "prolificId",
                "prompt": "Please enter your Prolific ID (without any spaces):",
                "required": true,
                "location": "belowStimulus",
                "type": "shortText",
                "placeholder": "Prolific ID",
                "paramCapture": "PROLIFIC_ID"
                }
            ]
        },
        "consent": {
            "type": "markdown",
            "path": "vis-decode/assets/consent.md",
            "nextButtonText": "Agree",
            "response": [
              {
                "id": "accept",
                "prompt": "Do you consent to the study and wish to continue?",
                "required": true,
                "location": "belowStimulus",
                "type": "radio",
                "options": [
                  "Decline",
                  "Accept"
                ]
              }
            ]
        },
        "survey": {
            "type": "markdown",
            "path": "vis-decode/assets/survey.md",
            "response": [
            {
                "id": "age", 
                "prompt": "What is your age?", 
                "required": true,
                "location": "belowStimulus",
                "type": "shortText",
                "placeholder": "Enter your age here."
              },
            {
                "id": "gender",
                "prompt": "What is your gender?",
                "required": true,
                "location": "belowStimulus",
                "type": "dropdown",
                "placeholder": "Please choose your gender",
                "options": ["Male", "Female", "Binary", "Non-binary", "Other"]
            }, 
            {
                "id": "strategy", 
                "prompt": "What strategy did you use to decode the visualizations?",
                "required": false, 
                "location": "belowStimulus",
                "type": "longText",
                "placeholder": "Enter your answer here."
            }, 
              {
                "id": "surveyExperience",
                "prompt": "Did you experience any problems with our tool?",
                "required": false,
                "location": "belowStimulus",
                "type": "longText",
                "placeholder": "Enter your answer here."
              },
              {
                "id": "surveyRenderIssues",
                "prompt": "Did anything not render or display properly?",
                "required": false,
                "location": "belowStimulus",
                "type": "longText",
                "placeholder": "Enter your answer here"
              },
              {
                "id": "surveyOtherIssues",
                "prompt": "Any other issues or anything you would like to tell us?",
                "required": false,
                "location": "belowStimulus",
                "type": "longText",
                "placeholder": "Enter your answer here"
              }
            ]
        }, 
        "trial1": {
          "baseComponent": "PDF-Median",
          "parameters": {
            "data": {"xi": 0, "omega": 1, "nu": 2, "alpha": 10}, 
            "taskid": "location"
          }, 
          "meta": {
            "data": {"xi": 0, "omega": 1, "nu": 2, "alpha": 10}
          }
        }, 
        "trial2": {
          "baseComponent": "PDF-Mode",
          "parameters": {
            "data": {"xi": 2, "omega": 3, "nu": 2, "alpha": -2}, 
            "taskid": "location" 
          },
          "meta": {
            "data": {"xi": 2, "omega": 3, "nu": 2, "alpha": -2}
          }
        }, 
        "trial3": {
          "baseComponent": "CDF-Mode",
          "parameters": {
            "data": {"xi": 1, "omega": 1, "nu": 2, "alpha": -20}, 
            "taskid": "location" 
          },
          "meta": {
            "data": {"xi": 1, "omega": 1, "nu": 2, "alpha": -20}
          }
        }, 
        "trial4": {
          "baseComponent": "CDF-Median",
          "parameters": {
            "data": {"xi": 1, "omega": 10, "nu": 2, "alpha": 1}, 
            "taskid": "location"
          },
          "meta": {
            "data": {"xi": 1, "omega": 10, "nu": 2, "alpha": 1} 
          }
        }
    },
    "sequence": {
        "order": "fixed",
        "components": [
            "introduction",
            "consent",
            {
              "components": [
                "trial1", 
                "trial2", 
                "trial3",
                "trial4"
              ], 
              "order": "random"
            }, 
            "survey"
        ]
    }
}